@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model BTPNS.Models.LoginViewModel
@{
    Layout = "_UnAuthorizeLayout";
    ViewBag.Title = "User Login";
}
<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">@Localizer["Welcome Back"]</h1>
                            </div>
                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"> </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user"
                                           id="exampleInputEmail" aria-describedby="emailHelp"
                                           placeholder="@Localizer["Enter Email Address..."]" />
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input asp-for="Password" class="form-control form-control-user pwd" placeholder="@Localizer["Password"]" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-default revealPassword" type="button"><i id="ieye" class="fa fa-eye-slash"></i></button>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(x => x.RememberMe)
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    @Localizer["Login"]
                                </button>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    <script>
        $(".revealPassword").on('click', function (event) {
            event.preventDefault();
            if ($('.pwd').attr("type") == "text") {
                $('.pwd').attr('type', 'password');
                $('#ieye').addClass("fa-eye-slash");
                $('#ieye').removeClass("fa-eye");
            } else if ($('.pwd').attr("type") == "password") {
                $('.pwd').attr('type', 'text');
                $('#ieye').removeClass("fa-eye-slash");
                $('#ieye').addClass("fa-eye");
            }
        });
    </script>
}
